<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:staggered="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android021box.htstartup.EventActivity">

    <com.android021box.htstartup.view.PullToRefreshStaggeredGridView
        android:id="@+id/event_staggered_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        staggered:item_margin="4dp"
        staggered:column_count="2" />

</RelativeLayout>
